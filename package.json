{
	"name": "vscode-gerrit-helper",
	"displayName": "Gerrit Push Helper",
	"description": "Gerrit Push,and Helper,推送当前分支到Gerrit的同名分支中以便评审。以及其他特定功能",
	"version": "0.0.1",
	"publisher": "Heartacker",
	"author": {
		"name": "heartacker",
		"email": "heartacker@outlook.com",
		"url": "https://www.github.com/heartacker"
	},
	"icon": "heartacker.vscode.gerrit.helper.icons.png",
	"readme": "README.md",
	"preview": true,
	"engines": {
		"vscode": "^1.50.0"
	},
	"bugs": {
		"url": "https://github.com/heartacker/vscode-gerrit-helper/issues",
		"email": "heartacker@outlook.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/heartacker/vscode-gerrit-helper.git"
	},
	"homepage": "https://github.com/heartacker/vscode-gerrit-helper",
	"qna": "https://github.com/heartacker/vscode-gerrit-helper/issues",
	"keywords": [
		"push",
		"pushg",
		"git",
		"gerrit",
		"review",
		"code review",
		"helper"
	],
	"categories": [
		"Visualization",
		"Other",
		"SCM Providers"
	],
	"activationEvents": [
		"onCommand:Gerrit.Helper.pushg",
		"onCommand:Gerrit.Helper.push"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Gerrit.Helper.HelperCommands",
				"title": "其他有用的 Gerrit 帮助命令",
				"shorttitle": "Gerrit.Helper.HelperCommands"
			},
			{
				"command": "Gerrit.Helper.acommit",
				"title": "规范 Git 的提交信息 (acommit)",
				"shorttitle": "Gerrit.Helper.acommit"
			},
			{
				"command": "Gerrit.Helper.push",
				"title": "选择指定分支并推送到 Gerrit(push)",
				"shorttitle": "Gerrit.Helper.push",
				"icon": {
					"dark": "images/gerrit-helper-dark.svg",
					"light": "images/gerrit-helper-light.svg"
				}
			},
			{
				"command": "Gerrit.Helper.pushg",
				"title": "推送当前分支到 Gerrit(pushg)",
				"shortTitle": "Gerrit.Helper.pushg",
				"icon": {
					"dark": "images/gerrit-helper-pushg-dark.svg",
					"light": "images/gerrit-helper-pushg-light.svg"
				}
			}
		],
		"menus": {
			"scm/title": [
				{
					"when": "scmProvider == git",
					"command": "Gerrit.Helper.pushg",
					"group": "navigation"
				},
				{
					"when": "scmProvider == git",
					"command": "Gerrit.Helper.push",
					"group": "3_footer"
				},
				{
					"when": "scmProvider == git",
					"command": "Gerrit.Helper.acommit",
					"group": "3_footer"
				},
				{
					"when": "scmProvider == git",
					"command": "Gerrit.Helper.HelperCommands",
					"group": "3_footer"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}