{
	"name": "vscode-gerrit-helper",
	"displayName": "Gerrit Push & Helper",
	"description": "Gerit Push,and Helper, 推送当前分支到 Gerrit 的同名分支中以便评审",
	"version": "0.0.9",
	"publisher": "Heartacker",
	"author": {
		"name": "heartacker",
		"email": "heartacker@outlook.com",
		"url": "https://www.github.com/heartacker"
	},
	"icon": "heartacker.vscode.gerrit.helper.icons.png",
	"readme": "README.md",
	"preview": true,
	"engines": {
		"vscode": "^1.50.0"
	},
	"bugs": {
		"url": "https://github.com/heartacker/vscode-gerrit-helper/issues",
		"email": "heartacker@outlook.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/heartacker/vscode-gerrit-helper.git"
	},
	"homepage": "https://github.com/heartacker/vscode-gerrit-helper",
	"qna": "https://github.com/heartacker/vscode-gerrit-helper/issues",
	"keywords": [
		"push",
		"pushg",
		"git",
		"gerrit",
		"review",
		"code review",
		"helper"
	],
	"categories": [
		"Visualization",
		"Other",
		"SCM Providers"
	],
	"extensionKind": [
		"workspace",
		"ui"
	],
	"activationEvents": [
		"onCommand:Gerrit.Helper.pushg",
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "Gerrit.Helper.pushg",
				"title": "Gerrit.Helper: 推送当前分支到 Gerrit(pushg)",
				"shortTitle": "Gerrit.Helper.pushg",
				"icon": {
					"dark": "images/gerrit-helper-pushg-dark.svg",
					"light": "images/gerrit-helper-pushg-light.svg"
				}
			}
		],
		"menus": {
			"scm/title": [
				{
					"when": "scmProvider == git",
					"command": "Gerrit.Helper.pushg",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"key": "ctrl+shift+g ctrl+shift+g",
				"command": "workbench.view.scm"
			},
			{
				"command": "Gerrit.Helper.pushg",
				"key": "ctrl+shift+g ctrl+p",
				"commentMacOS": "cmd+shift+g cmd+p"
			},
			{
				"key": "f1",
				"command": "workbench.action.navigateBack"
			},
			{
				"key": "alt+f1",
				"commentMacOS": "alt+f1",
				"command": "workbench.action.navigateForward"
			},
			{
				"key": "shift+f1",
				"command": "editor.action.referenceSearch.trigger",
				"when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor",
				"commend": "查找引用"
			},
			{
				"key": "ctrl+f1",
				"mac": "cmd+f1",
				"commentMacOS": "editor.action.revealDefinition",
				"when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
			},
			{
				"key": "ctrl+f1",
				"commentMacOS": "cmd+f1",
				"command": "goToNextReference",
				"when": "inReferenceSearchEditor || referenceSearchVisible"
			},
			{
				"key": "ctrl+shift+oem_3",
				"commentMacOS": "cmd+shift+oem_3",
				"command": "workbench.action.terminal.newWithProfile",
				"when": "terminalProcessSupported",
				"commen": "选择工作区和 shell"
			},
			{
				"key": "ctrl+shift+alt+j",
				"commentMacOS": "cmd+shift+alt+j",
				"command": "workbench.action.toggleMaximizedPanel",
				"comment": "最大化面板"
			},
			{
				"key": "ctrl+shift+i",
				"commentMacOS": "cmd+shift+i",
				"command": "editor.action.insertSnippet",
				"when": "editorTextFocus || editorHasSelection",
				"comment": "插入代码提示"
			},
			{
				"key": "ctrl+win+oem_plus",
				"command": "workbench.action.minimizeOtherEditors",
				"comment": "ctrl+win+ + , 最大化编辑器组"
			},
			{
				"key": "ctrl+win+oem_minus",
				"command": "workbench.action.evenEditorWidths",
				"comment": "ctrl+win+- ， 恢复编辑器组大小"
			},
			{
				"key": "ctrl+alt+f5",
				"commentMacOS": "cmd+alt+f5",
				"command": "workbench.action.debug.selectandstart",
				"comment": "选择那个去运行 debug"
			},
			{
				"key": "ctrl++shift+alt+b",
				"commentMacOS": "cmd+alt+b",
				"command": "workbench.action.tasks.runTask",
				"comment": "选择那个去 build"
			},
			{
				"key": "alt+f11",
				"command": "textmarker.toggleHighlight",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "16.7.1",
		"eslint": "^7.32.0",
		"@typescript-eslint/eslint-plugin": "^4.29.2",
		"@typescript-eslint/parser": "^4.29.2",
		"glob": "^7.1.7",
		"mocha": "^9.1.0",
		"typescript": "^4.3.5",
		"vscode-test": "^1.6.1"
	}
}